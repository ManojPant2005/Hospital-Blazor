@using HMS.Data.Configuration
@inject TokenProvider TokenProvider

<AuthorizeView>
    <Authorized>
        <a class="nav nav-link" href="Identity/Account/Manage/Index">
            Hello, @context.User.Identity.Name!
        </a>
        <form action="/Identity/Account/Logout?returnUrl=%2f" method="post">
            <button class="btn btn-outline-info">Logout</button>
            <input name="__RequestVerificationToken" type="hidden"
                   value="@TokenProvider.XsrfToken" />
        </form>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-info" style="width:75px;font-family:Bahnschrift;align-items:revert;float:right" href="Identity/Account/Login"><b>Login</b></a>&nbsp;
        <a class="btn btn-info" style="font-family:Bahnschrift;" href="Identity/Account/Register"><b>Register</b></a>
    </NotAuthorized>
</AuthorizeView>